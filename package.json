{
  "name": "skeleton.css",
  "version": "1.1.0",
  "description": "A require()able version of Skeleton",
  "keywords": [
    "css"
  ],
  "repository": "KenanY/skeleton.css",
  "license": "MIT",
  "author": "Kenan Yildirim <kenan@kenany.me> (http://kenany.me/)",
  "style": "skeleton.css",
  "main": "bundle.js",
  "files": [
    "bundle.js",
    "LICENSE.txt",
    "skeleton.css"
  ],
  "scripts": {
    "build": "npm run clean && npm run download && npm run extract && npm run pack && npm run browserify",
    "browserify": "browserify index.js -t brfs -s 'skeleton' > bundle.js",
    "clean": "rimraf Skeleton-2.0.2",
    "download": "nugget https://github.com/dhg/Skeleton/releases/download/v2.0.2/Skeleton-2.0.2.zip",
    "extract": "extract-zip Skeleton-2.0.2.zip",
    "pack": "packify-css Skeleton-2.0.2/css/skeleton.css > skeleton.css",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "brfs": "^1.2.0",
    "extract-zip": "^1.0.3",
    "nugget": "^1.3.0",
    "packify-css": "^1.0.0",
    "rimraf": "^2.2.8"
  }
}
